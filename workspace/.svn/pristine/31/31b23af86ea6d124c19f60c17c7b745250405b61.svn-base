function noCoursesHTML(){
	var noCoursesHTML = 
		'<div class="jumbotron" id="noLectures">'+
			'<h1>Not Managing Any Courses</h1>'+
			'<p>Create one by clicking the "New Course" button above.</p>'+
		'</div>';
