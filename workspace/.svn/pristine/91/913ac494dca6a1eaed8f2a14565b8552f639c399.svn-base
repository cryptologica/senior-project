/* CSS declarations go here */
body{
	margin:0;
}

header{
	margin:0;
	background-color: #e1e1e1;
	height: 15%;
	width: 100%;
	position: relative;
}

img#logo{
	position: absolute;
	top:0;
	left:0;
	height: 70%;
}

img#profilePic{
	position: relative;
	height:20%;
	width: 20px;
}

li#inline{
	display: inline;
}

ul#headerContainer{
	list-style-type: none;
	display: inline-block;
	padding: 0.5%;
	position: absolute;
	margin-right: 0.5%;
	right: 0;
	float: right;
}

ul#classContainer{
	list-style-type: none;
	display: inline-block;
	padding: 1%;
	border: 3px solid black;
	width: 80%;
	margin-right: 5%;
	margin-left: 5%;
	margin-top: 0;
}

ul#formContainer{
	list-style-type: none;
	display: inline-block;
}

ul#menuContainer{
	list-style-type: none;
	color: white;
	display: inline-block;
	padding: 0.5%;
	border:3px solid black;
	width: 98%;
	background-color: #2597FC;
	margin: 0;
	position: absolute;
	bottom: 0;
	left:0;
}

input#button{
	background-repeat: no-repeat;
	background-size: 100%;
	cursor:pointer;
	width: 35%;
	height: 30%; 
	margin-top: 1%;
	margin-left: 10%;
}

ul#quizContainer{
	list-style-type: none;
	display: inline-block;
	background-color: gray;
	padding: 1%;
	border: 3px solid black;
	width: 20%;
	height: 100%;
	margin-right: 5%;
	margin-top: 0;
	margin-bottom: 0;
	position: absolute;
}

input#question{
	position: relative;
	cursor: pointer;
	margin-top: 10%;
	width: 50%;
	margin-left: 10%;
	margin-right: 0;
	height: 15%;
}

ul#box{
	list-style-type: none;
	display: inline-block;
	padding-left: 1%;
	border: 3px solid black;
	min-width: 20%;
	margin-right: 5%;
	margin-left: 5%;
	margin-bottom: 0;
}