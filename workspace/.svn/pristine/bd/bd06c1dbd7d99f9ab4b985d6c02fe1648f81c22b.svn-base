
img#logo {
	height: 100px;
}

.sidebar {
	top: 50px;
}

.navbar-left {
	margin-top: 50px;
}

.spinner {
  display: inline-block;
  opacity: 0;
  width: 0;

  -webkit-transition: opacity 0.25s, width 0.25s;
  -moz-transition: opacity 0.25s, width 0.25s;
  -o-transition: opacity 0.25s, width 0.25s;
  transition: opacity 0.25s, width 0.25s;
}

.has-spinner.active {
  cursor:progress;
}

.has-spinner.active .spinner {
  opacity: 1;
  width: auto; 
}

a[disabled] { 
	pointer-events: none; 
}

body {
	visibility: hidden;
}

/* Add bottom border to navbar dropdown menus */
.dropdown{
	border-bottom: 1px solid;
}
