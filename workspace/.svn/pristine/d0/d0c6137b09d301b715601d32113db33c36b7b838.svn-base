	<!-- Page Content -->
	<div class="container" style="height: 100%;">

		<br>
		<div class="row">

			<div class="col-md-3">
				<p class="lead">User's Guide</p>
				<div class="list-group">
					<a href="#" class="guideNav list-group-item" page="registration">Registration</a>
					<a href="#" class="guideNav list-group-item" page="instHomepage">Instructor's
